# COMMANDE !verif

@bot.command()
async def suppreact(ctx):
    # Supprimez la commande !suppreact
    await ctx.message.delete()

    async with ctx.typing():  # Indiquez que le bot est en train d'Ã©crire
        async for message in ctx.channel.history(limit=None):
            # VÃ©rifiez si le message a des rÃ©actions en forme de croix rouge ajoutÃ©es par le bot
            for reaction in message.reactions:
                if str(reaction.emoji) == "âŒ" and reaction.me:
                    await reaction.remove(bot.user)

    await ctx.send("Toutes les rÃ©actions âŒ ont Ã©tÃ© supprimÃ©es.")

@bot.command()
async def verif(ctx):
    # Supprimez la commande !verif
    await ctx.message.delete()

    async with ctx.typing():  # Indiquez que le bot est en train d'Ã©crire
        error_count = 0  # Variable pour suivre le nombre d'erreurs trouvÃ©es

        async for message in ctx.channel.history(limit=None):
            # Fonction pour vÃ©rifier si une chaÃ®ne contient des espaces entre les chiffres
            def has_spaces_between_digits(s):
                import re
                return re.search(r'\d\s+\d', s) is not None

            # Fonction pour vÃ©rifier si une chaÃ®ne contient des symboles non autorisÃ©s
            def has_invalid_symbols(s):
                import re
                return re.search(r'[^0-9\s]', s) is not None

            # Ignorer les messages qui ne sont pas des montants
            if not any(char.isdigit() for char in message.content):
                continue

            # Ignorer les messages contenant des mentions d'utilisateurs
            if message.mentions:
                continue

            if has_spaces_between_digits(message.content) or has_invalid_symbols(message.content):
                # IncrÃ©mente le compteur d'erreurs
                error_count += 1

                # CrÃ©ez un nouvel embed pour chaque erreur numÃ©rotÃ©e
                error_embed = discord.Embed(
                    title=f"Erreur #{error_count} dans le Montant",
                    color=discord.Color.red()
                )
                error_embed.description = f"âŒ [Cliquez ici pour accÃ©der Ã  l'erreur]({message.jump_url})"
                await message.add_reaction("âŒ")

                # Ajoute le logo du serveur Ã  l'icÃ´ne du footer
                error_embed.set_footer(text="By Icalea's Bot", icon_url=ctx.guild.icon.url)

                # Envoyez l'embed d'erreur numÃ©rotÃ©
                await ctx.send(embed=error_embed)
            else:
                # Si le message n'a pas d'erreurs, vÃ©rifiez s'il a dÃ©jÃ  la rÃ©action croix rouge
                for reaction in message.reactions:
                    if str(reaction.emoji) == "âŒ":
                        # Supprimez la rÃ©action croix rouge
                        await reaction.remove(bot.user)

        # Envoyez un message de validation global si aucune erreur n'a Ã©tÃ© trouvÃ©e
        if error_count == 0:
            success_embed = discord.Embed(
                title="Tout est validÃ© ! âœ…ğŸ‰",
                color=discord.Color.green()
            )

            # Ajoute quelques emojis pour le plaisir
            success_embed.set_image(url="https://i.imgur.com/your_image_url_here.png")

            # Ajoute le logo du serveur Ã  l'icÃ´ne de l'embed de succÃ¨s
            success_embed.set_thumbnail(url=ctx.guild.icon.url)

            # Ajoute le logo du serveur au footer
            success_embed.set_footer(text="By Icalea's Bot", icon_url=ctx.guild.icon.url)

            await ctx.send(embed=success_embed)



# Commande personnalisÃ©e pour le salaire
@bot.command()
async def salaire(ctx, argument1, argument2):
    # VÃ©rifie si l'utilisateur a le rÃ´le autorisÃ©
    role = discord.utils.get(ctx.author.roles, id=role_id_autorise)
    
    if role is not None:
        # VÃ©rifie si les arguments sont prÃ©sents
        if argument1 is None or argument2 is None:
            await ctx.send("Veuillez fournir tous les arguments nÃ©cessaires : `!salaire @utilisateur Montant`")
        else:
            # Les arguments sont prÃ©sents, envoie l'embed dans le canal spÃ©cifiÃ©
            await envoyer_embed_2(ctx, argument1, argument2)
            # Envoie le message en gras avec des emojis imposants dans le canal de la commande
            await envoyer_message_paye(ctx, argument1)
            await ctx.message.delete()  # Supprime la commande
    else:
        await ctx.send("Vous n'avez pas la permission d'utiliser cette commande.")

@bot.command()
async def vire(ctx, member: discord.Member = None):
    
    # VÃ©rifie si l'utilisateur a le rÃ´le autorisÃ©
    role = discord.utils.get(ctx.author.roles, id=role_id_autorise)
    if role is None:
        await ctx.send("Vous n'avez pas le rÃ´le autorisÃ© pour exÃ©cuter cette commande.")
        return

    # CrÃ©e un objet de fuseau horaire Europe/Paris
    paris_timezone = pytz.timezone('Europe/Paris')

    # Obtient la date et l'heure actuelles en Europe/Paris
    paris_now = datetime.now(paris_timezone)

    # Liste des 9 ID de rÃ´les Ã  supprimer
    roles_to_remove_ids = [
        1145107760485244970,  # ROLE_ID_1
        1144691712632049815,  # ROLE_ID_2
        1144691710669095012,  # ROLE_ID_3
        1144691708655829053,  # ROLE_ID_4
        1144691706869072065,  # ROLE_ID_5
        1144692338443157555,  # ROLE_ID_6
        1144692216212754452,  # ROLE_ID_7
        1144691704809660506,  # ROLE_ID_8
        1145145376828035214,  # ROLE_ID_9
        1145145385879355564,  # ROLE_ID_10
        1145145411779186731,  # ROLE_ID_11
        1145115765041799220   # ROLE_ID_12
    ]

    if member is None:
        await ctx.send("Veuillez mentionner un utilisateur.")
        return

    # RÃ©cupÃ¨re les rÃ´les spÃ©cifiÃ©s par leur ID
    roles_to_remove = [role for role in member.roles if role.id in roles_to_remove_ids]

    # VÃ©rifie si l'utilisateur possÃ¨de les rÃ´les spÃ©cifiÃ©s
    if roles_to_remove:
        # Supprime les rÃ´les spÃ©cifiÃ©s
        await member.remove_roles(*roles_to_remove)

        # CrÃ©e un emoji de licenciement
        fire_emoji = "ğŸ”¥"

        # CrÃ©e un embed de licenciement pour le canal actuel
        embed = discord.Embed(
            title=f"{fire_emoji} Fiche de Licenciement {fire_emoji}",
            description=f"{member.mention} a Ã©tÃ© licenciÃ© du Ls Tuning.",
            color=discord.Color.red()
        )
      
        # VÃ©rifie si l'avatar est disponible
        if member.avatar:
            embed.set_thumbnail(url=member.avatar.url)
          
        embed.add_field(name="Nom de l'employÃ©", value=member.display_name, inline=True)
        embed.add_field(name="LicenciÃ© par", value=ctx.author.mention, inline=True)
        embed.add_field(name="Date et heure du licenciement", value=paris_now.strftime("%Y-%m-%d %H:%M:%S"), inline=False)
        embed.add_field(name="RÃ´les supprimÃ©s", value=', '.join([role.mention for role in roles_to_remove]), inline=False)
        embed.set_footer(text="Ls Tuning", icon_url=ctx.guild.icon.url) 

        # Envoie l'embed dans le mÃªme canal
        message = await ctx.send(embed=embed)

        # RÃ©cupÃ¨re le canal avec l'ID spÃ©cifique
        specific_channel_id = 1144704482232508466
        specific_channel = bot.get_channel(specific_channel_id)

        if specific_channel:
            # CrÃ©e un emoji de licenciement
            hammer_emoji = "ğŸ”¨"

            # CrÃ©e un embed de licenciement pour le canal spÃ©cifique
            specific_embed = discord.Embed(
                title=f"{hammer_emoji} Fiche de Licenciement {hammer_emoji}",
                description=f"{member.mention} a Ã©tÃ© licenciÃ© du Ls Tuning.",
                color=discord.Color.red()
            )
          
            # VÃ©rifie si l'avatar est disponible
            if member.avatar:
                specific_embed.set_thumbnail(url=member.avatar.url)

            specific_embed.add_field(name="Nom de l'employÃ©", value=member.display_name, inline=True)
            specific_embed.add_field(name="LicenciÃ© par", value=ctx.author.mention, inline=True)
            specific_embed.add_field(name="Date et heure du licenciement", value=paris_now.strftime("%Y-%m-%d %H:%M:%S"), inline=False)
            specific_embed.add_field(name="RÃ´les supprimÃ©s", value=', '.join([role.mention for role in roles_to_remove]), inline=False)
            specific_embed.set_footer(text="Ls Tuning", icon_url=ctx.guild.icon.url) 

            # Envoie l'embed dans le canal spÃ©cifique
            await specific_channel.send(embed=specific_embed)
        else:
            print(f"Canal avec l'ID {specific_channel_id} non trouvÃ©.")

        # Supprime la commande
        await ctx.message.delete()
    else:
        await ctx.send(f"{member.mention} ne possÃ¨de pas les rÃ´les spÃ©cifiÃ©s.")

# !mecano

@bot.command()
async def mecano(ctx, member: discord.Member = None):
    # VÃ©rifie si un membre est mentionnÃ©
    if member is None:
        await ctx.send("Veuillez mentionner un utilisateur.")
        return

    # CrÃ©e un objet de fuseau horaire Europe/Paris
    paris_timezone = pytz.timezone('Europe/Paris')

    # Obtient la date et l'heure actuelles en Europe/Paris
    paris_now = datetime.now(paris_timezone)

    # RÃ´le Ã  supprimer
    role_id_a_supprimer = 1144691712632049815  # ID du rÃ´le Ã  supprimer
    role_id_a_ajouter = 1144691710669095012  # ID du rÃ´le Ã  ajouter

    # VÃ©rifie si l'utilisateur a le rÃ´le autorisÃ©
    role_id_autorise = 1144692338443157555  # ID du rÃ´le autorisÃ©
    role = discord.utils.get(ctx.author.roles, id=role_id_autorise)

    # VÃ©rifie si l'utilisateur mentionnÃ© possÃ¨de le rÃ´le Ã  supprimer
    if discord.utils.get(member.roles, id=role_id_a_supprimer):
        if role:
            # Supprime le rÃ´le spÃ©cifiÃ©
            role_a_supprimer = discord.utils.get(ctx.guild.roles, id=role_id_a_supprimer)
            await member.remove_roles(role_a_supprimer)

            # Ajoute le rÃ´le spÃ©cifiÃ©
            role_a_ajouter = discord.utils.get(ctx.guild.roles, id=role_id_a_ajouter)
            await member.add_roles(role_a_ajouter)

            # Calcul du nouveau pourcentage de salaire
            pourcentage_salaire = 60  # Remplacez par le pourcentage appropriÃ©


            # CrÃ©e un embed de fiche de promotion
            embed = discord.Embed(
                title="Fiche de Promotion ğŸš€",
                description=f"ğŸ”§ Promotion de {member.mention} ğŸ”§",
                color=discord.Color.gold()
            )
          
            # VÃ©rifie si l'avatar est disponible
            if member.avatar:
                embed.set_thumbnail(url=member.avatar.url)
              
            embed.add_field(name="Promu par ğŸ“£", value=ctx.author.mention, inline=True)
            embed.add_field(name="Date de la promotion ğŸ—“ï¸", value=paris_now.strftime("%Y-%m-%d %H:%M:%S"), inline=False)
            embed.add_field(name="Nouveau grade ğŸ†™", value=role_a_ajouter.mention, inline=False)
            embed.add_field(name="Nouveau pourcentage de salaire ğŸ’°", value=f"{pourcentage_salaire}%", inline=False)
            embed.set_footer(text="Ls Tuning ğŸ", icon_url=ctx.guild.icon.url)

            # Envoie l'embed dans le canal actuel
            await ctx.send(embed=embed)

            # CrÃ©e un deuxiÃ¨me embed de promotion pour le canal spÃ©cifique
            specific_embed = discord.Embed(
                title="Fiche de Promotion ğŸš€",
                description=f"ğŸ”§ Promotion de {member.mention} ğŸ”§",
                color=discord.Color.gold()
            )
          
            # VÃ©rifie si l'avatar est disponible
            if member.avatar:
                specific_embed.set_thumbnail(url=member.avatar.url)

            specific_embed.add_field(name="Promu par ğŸ“£", value=ctx.author.mention, inline=True)
            specific_embed.add_field(name="Date de la promotion ğŸ—“ï¸", value=paris_now.strftime("%Y-%m-%d %H:%M:%S"), inline=False)
            specific_embed.add_field(name="Nouveau grade ğŸ†™", value=role_a_ajouter.mention, inline=False)
            specific_embed.add_field(name="Nouveau pourcentage de salaire ğŸ’°", value=f"{pourcentage_salaire}%", inline=False)
            specific_embed.set_footer(text="Ls Tuning ğŸ", icon_url=ctx.guild.icon.url)

            # RÃ©cupÃ¨re le canal avec l'ID spÃ©cifique et envoie le deuxiÃ¨me embed
            specific_channel_id = 1144704482232508466
            specific_channel = bot.get_channel(specific_channel_id)
            if specific_channel:
                await specific_channel.send(embed=specific_embed)
            else:
                print(f"Canal avec l'ID {specific_channel_id} non trouvÃ©.")

            # Renomme le canal actuel
            await ctx.channel.edit(name=f"ã€ŒğŸ”§ã€{member.display_name}")

            # Supprime la commande
            await ctx.message.delete()
        else:
            await ctx.send("Vous n'avez pas l'autorisation d'utiliser cette commande.")
    else:
        await ctx.send(f"{member.mention} ne possÃ¨de pas le rÃ´le Ã  supprimer.")

