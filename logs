# COMMANDE !averto2

@bot.command()
async def averto2(ctx, member: discord.Member = None, *, reason: str = None):
    # Obtenir la date et l'heure actuelles au format souhaitÃ© et au fuseau horaire Europe/Paris
    paris_timezone = pytz.timezone('Europe/Paris')
    current_datetime = datetime.now(paris_timezone).strftime("%A %d %B %Y Ã  %H:%M")

    # Remplacer le nom du jour de la semaine en anglais par la traduction franÃ§aise
    for day_en, day_fr in jours_de_la_semaine_fr.items():
        current_datetime = current_datetime.replace(day_en, day_fr)

    # Remplacer le nom du mois en anglais par la traduction franÃ§aise
    for month_en, month_fr in mois_fr.items():
        current_datetime = current_datetime.replace(month_en, month_fr)

    # Liste des IDs de rÃ´les requis pour exÃ©cuter la commande
    roles_requis_ids = [1144691704809660506, 1144692216212754452, 1144692338443157555, 1144691706869072065]  # Ajout des IDs rÃ©els des rÃ´les

    # VÃ©rifier si l'utilisateur possÃ¨de l'un des rÃ´les requis
    possede_role_requis = any(role.id in roles_requis_ids for role in ctx.author.roles)
    if not possede_role_requis:
        await ctx.send("ğŸš« Vous n'avez pas la permission d'exÃ©cuter cette commande.")
        return

    # VÃ©rifier si un utilisateur a Ã©tÃ© mentionnÃ©
    if member is None:
        await ctx.send("âš ï¸ Veuillez mentionner un utilisateur.")
        return

    # VÃ©rifier si la raison a Ã©tÃ© spÃ©cifiÃ©e
    if reason is None or reason.strip() == "":
        await ctx.send("âš ï¸ Veuillez spÃ©cifier une raison pour l'avertissement.")
        return

    # RÃ©cupÃ©rer l'icÃ´ne du serveur
    server_icon_url = ctx.guild.icon.url

    # CrÃ©ation de l'embed
    embed = discord.Embed(
        title="â›”ï¸ Avertissement de niveau 2 â›”ï¸",
        description=f"ğŸ›‘ **Avertissement pour {member.mention}** ğŸ›‘",
        color=discord.Color.orange()
    )

    # Ajout du thumbnail (l'icÃ´ne de l'utilisateur)
    if member.avatar:
        embed.set_thumbnail(url=member.avatar.url)

    # Ajout de champs Ã  l'embed
    embed.add_field(name="ğŸ“‹ Raison", value=reason)  # Utilisation de la raison spÃ©cifiÃ©e par l'utilisateur
    embed.add_field(name="ğŸ’¡ DonnÃ© par", value=ctx.author.mention)
    embed.add_field(name="â° Date et Heure", value=current_datetime)

    # Ajout du rÃ´le ajoutÃ©
    role_id = 1145145385879355564  # ID du rÃ´le
    role = discord.utils.get(ctx.guild.roles, id=role_id)
    if role:
        embed.add_field(name="ğŸ‘¥ RÃ´le ajoutÃ©", value=role.mention)

    # Ajout du footer avec l'icÃ´ne du serveur
    embed.set_footer(text="Ls Tuning", icon_url=server_icon_url)

    # Envoi de l'embed
    message = await ctx.send(embed=embed)

    # RÃ©cupÃ©ration du canal spÃ©cifique
    canal_specifique_id = 1144696836825829417  # ID du canal spÃ©cifique
    canal_specifique = bot.get_channel(canal_specifique_id)
    
    # Envoi de l'embed dans le canal spÃ©cifique s'il existe
    if canal_specifique:
        await canal_specifique.send(embed=embed)

    # Attribution du rÃ´le spÃ©cifique Ã  l'utilisateur
    role_id = 1145145385879355564  # ID du rÃ´le
    role = discord.utils.get(ctx.guild.roles, id=role_id)
    if role:
        await member.add_roles(role)

    # Supprimer la commande aprÃ¨s son envoi
    await ctx.message.delete()

