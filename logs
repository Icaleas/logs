# !chef

@bot.command()
async def chef(ctx, member: discord.Member = None):
    # VÃ©rifie si un membre est mentionnÃ©
    if member is None:
        await ctx.send("Veuillez mentionner un utilisateur.")
        return

    # CrÃ©e un objet de fuseau horaire Europe/Paris
    paris_timezone = pytz.timezone('Europe/Paris')

    # Obtient la date et l'heure actuelles en Europe/Paris
    paris_now = datetime.now(paris_timezone)

    # RÃ´le Ã  supprimer
    role_id_a_supprimer = 1144691708655829053  # ID du rÃ´le Ã  supprimer
    role_ids_a_ajouter = [1144691706869072065, 1145115765041799220]

    # CrÃ©e une liste pour stocker les mentions de rÃ´les
    mentions_roles = []

    # VÃ©rifie si l'utilisateur a le rÃ´le autorisÃ©
    role_id_autorise = 1144692338443157555  # ID du rÃ´le autorisÃ©
    role = discord.utils.get(ctx.author.roles, id=role_id_autorise)

    # VÃ©rifie si l'utilisateur mentionnÃ© possÃ¨de le rÃ´le Ã  supprimer
    if discord.utils.get(member.roles, id=role_id_a_supprimer):
        if role:
            # Supprime le rÃ´le spÃ©cifiÃ©
            role_a_supprimer = discord.utils.get(ctx.guild.roles, id=role_id_a_supprimer)
            await member.remove_roles(role_a_supprimer)

            # Ajoute les mentions des rÃ´les spÃ©cifiÃ©s
            for role_id in role_ids_a_ajouter:
                role_a_ajouter = discord.utils.get(ctx.guild.roles, id=role_id)
                if role_a_ajouter:
                    mentions_roles.append(role_a_ajouter.mention)
                    await member.add_roles(role_a_ajouter)

            # Combine les mentions des rÃ´les en une seule chaÃ®ne de caractÃ¨res
            roles_mentions_str = ', '.join(mentions_roles)

            # Calcul du nouveau pourcentage de salaire
            pourcentage_salaire = 80  # Remplacez par le pourcentage appropriÃ©


            # CrÃ©e un embed de fiche de promotion
            embed = discord.Embed(
                title="Fiche de Promotion ğŸš€",
                description=f"ğŸ”§ Promotion de {member.mention} ğŸ”§",
                color=discord.Color.gold()
            )
          
            # VÃ©rifie si l'avatar est disponible
            if member.avatar:
                embed.set_thumbnail(url=member.avatar.url)
              
            embed.add_field(name="Promu par ğŸ“£", value=ctx.author.mention, inline=True)
            embed.add_field(name="Date de la promotion ğŸ—“ï¸", value=paris_now.strftime("%Y-%m-%d %H:%M:%S"), inline=False)
            embed.add_field(name="Nouveau grade ğŸ†™", value=roles_mentions_str, inline=False)
            embed.add_field(name="Nouveau pourcentage de salaire ğŸ’°", value=f"{pourcentage_salaire}%", inline=False)
            embed.set_footer(text="Ls Tuning ğŸ", icon_url=ctx.guild.icon.url)

            # Envoie l'embed dans le canal actuel
            await ctx.send(embed=embed)

            # CrÃ©e un deuxiÃ¨me embed de promotion pour le canal spÃ©cifique
            specific_embed = discord.Embed(
                title="Fiche de Promotion ğŸš€",
                description=f"ğŸ”§ Promotion de {member.mention} ğŸ”§",
                color=discord.Color.gold()
            )
          
            # VÃ©rifie si l'avatar est disponible
